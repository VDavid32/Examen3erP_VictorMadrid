<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    style="@style/Widget.Material3.CardView.Elevated"
    app:cardCornerRadius="15sp"
    app:cardElevation="10sp"
    android:layout_margin="4sp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200sp"
        android:padding="10sp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/list_item_descripcion"
            android:textSize="18sp"
            android:singleLine="true"
            android:textColor="?attr/colorPrimary"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/list_item_descripcion"
            android:id="@+id/list_item_periodista"
            android:textSize="16sp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/list_item_periodista"
            android:id="@+id/list_item_fecha"
            android:textSize="14sp"/>

        <ImageView
            android:layout_width="100sp"
            android:layout_height="100sp"
            android:layout_below="@id/list_item_fecha"
            android:id="@+id/list_item_imagen"
            android:scaleType="centerCrop"/>

        <ImageButton
            android:layout_width="50sp"
            android:layout_height="50sp"
            android:layout_below="@id/list_item_fecha"
            android:layout_toRightOf="@id/list_item_imagen"
            android:id="@+id/list_item_audio"
            android:src="@android:drawable/ic_media_play"/>

    </RelativeLayout>


</com.google.android.material.card.MaterialCardView>